{
  "name": "zoobuch",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "christoph",
  "sourceRoot": "apps/zoobuch/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/zoobuch",
        "index": "apps/zoobuch/src/index.html",
        "main": "apps/zoobuch/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/zoobuch/tsconfig.app.json",
        "assets": ["apps/zoobuch/src/favicon.ico", "apps/zoobuch/src/assets"],
        "styles": [
          "apps/zoobuch/src/styles.scss",
          "apps/zoobuch/src/bootstrap.css"
        ],
        "scripts": ["apps/zoobuch/src/bootstrap.js"]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "zoobuch:build:production"
        },
        "development": {
          "browserTarget": "zoobuch:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "zoobuch:build"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/zoobuch/**/*.ts", "apps/zoobuch/**/*.html"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/zoobuch/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "zoobuch:build"
      }
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "apps/zoobuch/.storybook",
        "browserTarget": "zoobuch:build",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/zoobuch",
        "configDir": "apps/zoobuch/.storybook",
        "browserTarget": "zoobuch:build",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "static-storybook": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "zoobuch:build-storybook",
        "staticFilePath": "dist/storybook/zoobuch"
      },
      "configurations": {
        "ci": {
          "buildTarget": "zoobuch:build-storybook:ci"
        }
      }
    }
  }
}
